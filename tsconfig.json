{
  "compilerOptions": {
    "target": "ES2020",
    "module": "Node16",
    "moduleResolution": "Node16",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "strict": false,
    "resolveJsonModule": true,
    "sourceMap": true,
    "types": ["node", "electron"],
    "allowJs": true,
    "outDir": "./dist"
  },
  "include": ["src/**/*", "index.ts", "index.js"]
}
